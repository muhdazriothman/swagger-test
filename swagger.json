{
  "openapi": "3.0.3",
  "info": {
    "title": "XML User API",
    "description": "Returns user data in XML format with no request payload required.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://a564-2001-e68-5879-a700-28f9-d364-ab93-dd33.ngrok-free.app"
    }
  ],
  "paths": {
    "/api/xml": {
      "post": {
        "summary": "Get XML response without sending any request data",
        "responses": {
          "200": {
            "description": "XML response containing user info",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "object",
                  "xml": {
                    "name": "response"
                  },
                  "properties": {
                    "version": {
                      "type": "string",
                      "example": "1.0",
                      "xml": {
                        "attribute": true
                      }
                    },
                    "data": {
                      "type": "object",
                      "xml": {
                        "name": "data"
                      },
                      "properties": {
                        "user": {
                          "type": "object",
                          "xml": {
                            "name": "user"
                          },
                          "properties": {
                            "id": {
                              "type": "integer",
                              "example": 1
                            },
                            "name": {
                              "type": "string",
                              "example": "John Doe"
                            },
                            "email": {
                              "type": "string",
                              "example": "john@example.com"
                            },
                            "timestamp": {
                              "type": "string",
                              "format": "date-time",
                              "example": "2025-06-04T07:28:20.276Z"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "example": "<?xml version=\"1.0\"?>\n<response version=\"1.0\">\n  <data>\n    <user>\n      <id>1</id>\n      <name>John Doe</name>\n      <email>john@example.com</email>\n      <timestamp>2025-06-04T07:28:20.276Z</timestamp>\n    </user>\n  </data>\n</response>"
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}
